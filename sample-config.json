{
  "$schema": "https://raw.githubusercontent.com/Ylianst/RenovarCentral/master/meshcentral-config-schema.json",
  "__comment1__": "This is a simple configuration file, all values and sections that start with underscore (_) are ignored. Edit a section and remove the _ in front of the name. Refer to the user's guide for details.",
  "__comment2__": "See node_modules/meshcentral/sample-config-advanced.json for a more advanced example.",
  "settings": {
    "_cert": "myserver.mydomain.com",
    "_WANonly": true,
    "_LANonly": true,
    "_sessionKey": "MyReallySecretPassword1",
    "_port": 443,
    "_aliasPort": 443,
    "_redirPort": 80,
    "_redirAliasPort": 80
  },
  "domains": {
    "": {
      "_title": "MyServer",
      "_title2": "Servername",
      "agentCustomization": {
        "displayName": "RenovarCentral",
        "description": "Renovar for remote monitoring, management and assistance.",
        "companyName": "Renovar",
        "serviceName": "RenovarCentral",
        "fileName": "Renovar",
        "image": "renovar.png",
        "installText": "Renovar for RMM",
        "foregroundColor": "100,54,105",
        "backgroundColor": "80,200,120"
      },
      "agentFileInfo":{
        "icon": "rnvr.ico",
        "filedescription": "RenovarCentral",
        "fileversion": "0.1.2.3",
        "internalname": "Renovar",
        "legalcopyright": "RenovarCentral",
        "originalfilename": "Renovar",
        "productname": "RenovarCentral",
        "productversion": "v0.1.2.3"
      },
      "_minify": true,
      "_newAccounts": true,
      "_userNameIsEmail": true
    }
  },
  "_letsencrypt": {
    "__comment__": "Requires NodeJS 8.x or better, Go to https://letsdebug.net/ first before trying Let's Encrypt.",
    "email": "myemail@mydomain.com",
    "names": "myserver.mydomain.com",
    "skipChallengeVerification": true,
    "production": false
  }
}
